{
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/*.md",
    "**/__tests__/**",
    ".*rc"
  ],
  "command": {
    "version": {
      "message": "chore(release): %s",
      "allowBranch": ["main"]
    }
  }
}
